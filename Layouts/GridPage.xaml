<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.GridPage"
             Title="GridPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Text="Titel" FontSize="Title" BackgroundColor="DarkGray" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="10"/>
        <Label BackgroundColor="DarkBlue" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Margin="5"/>
        <Label BackgroundColor="DarkGreen" Grid.Column="2" Grid.Row="1" Margin="5"/>
        <Label BackgroundColor="DarkMagenta" Grid.Column="2" Grid.Row="2" Margin="5"/>
        <Label BackgroundColor="DarkOrange" Grid.Column="0" Grid.Row="3" Margin="5"/>
        <Label BackgroundColor="DarkRed" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" Margin="15"/>
    </Grid>
</ContentPage>